function toBytes(str){return str.split("").map(c=>"\\"+c.charCodeAt(0)).join("")}
function obfuscate(){
    let code=input.value;if(!code.trim())return;
    let encoded=toBytes(code);
    let tableName="_"+Math.random().toString(36).slice(2,8);
    let fnName="_"+Math.random().toString(36).slice(2,8);
    let outputCode=(
`--[[ Protected By Akimbo ]]return(function(...)local ${tableName}={"${encoded}"}local function ${fnName}(i)return ${tableName}[i]end
local function _decode(s)local r={}local n=1 while n<=#s do local c=string.sub(s,n,n)
if c=="\\\\" then local a="" n=n+1 while n<=#s do local d=string.sub(s,n,n)
if d:match("%d") then a=a..d n=n+1 else break end end
table.insert(r,string.char(tonumber(a)))else table.insert(r,c)n=n+1 end end
return table.concat(r)end local _chunk=_decode(${fnName}(1))
local _f=loadstring or load return _f(_chunk)(...)end)(...)`
    ).replace(/\s+/g," ");
    output.value=outputCode;
}
function copyOutput(){output.select();document.execCommand("copy")}
async function pasteInput(){input.value=await navigator.clipboard.readText()}
function cleanAll(){input.value="";output.value=""}
function downloadLua(){if(!output.value)return;let b=new Blob([output.value]);let a=document.createElement("a");a.href=URL.createObjectURL(b);a.download="obfuscated.lua";a.click()}
fileInput.onchange=()=>{let f=fileInput.files[0];if(!f)return;let r=new FileReader();r.onload=e=>input.value=e.target.result;r.readAsText(f)}
</script></body>
